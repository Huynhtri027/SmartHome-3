<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/switch_bg"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/switch_group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <com.gdgl.util.CircleProgressBar
            android:id="@+id/circleProgressbar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/switch_group2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/btn_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/open_off" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_open"
            android:layout_alignBottom="@+id/btn_open"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dp"
            android:background="@drawable/close_off" />

        <TextView
            android:id="@+id/txt_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_open"
            android:layout_below="@+id/btn_open"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="打开窗帘"
            android:textColor="#0000FF"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_open"
            android:layout_alignBottom="@+id/txt_open"
            android:layout_alignLeft="@+id/btn_close"
            android:gravity="center"
            android:text="关闭窗帘"
            android:textColor="#0000FF"
            android:textSize="16dp" />
    </RelativeLayout>

</LinearLayout>