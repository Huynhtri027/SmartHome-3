<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/switch_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_devices_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Switch_1"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/corners"
            android:visibility="gone" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/txt_devices_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="厨房"
            android:textColor="#000000"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/divider_color" />

    <RelativeLayout
        android:id="@+id/switch_group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <CheckBox
            android:id="@+id/switch_state1"
            style="@style/switch_checkbox_style"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:checked="true"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/switch_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/switch_state1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="开关1"
            android:textColor="#000000"
            android:textSize="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/switch_group2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <View
            android:id="@+id/divder"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/divder"
            android:orientation="vertical" >

            <CheckBox
                android:id="@+id/switch_state2"
                style="@style/switch_checkbox_style"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:checked="true" />

            <TextView
                android:id="@+id/switch_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="开关2"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/divder"
            android:orientation="vertical" >

            <CheckBox
                android:id="@+id/switch_state3"
                style="@style/switch_checkbox_style"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:checked="true" />

            <TextView
                android:id="@+id/switch_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="开关3"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>