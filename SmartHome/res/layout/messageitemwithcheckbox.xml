<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout 
        android:id="@+id/warm_img_layout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true">
        <ImageView
	        android:id="@+id/warm_img"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:layout_marginLeft="5dp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true" />
	  	<ImageView
	  	    android:id="@+id/warm_point"
	        android:layout_width="15dp"
	        android:layout_height="15dp"
	        android:layout_marginRight="5dp"
	        android:layout_marginTop="5dp"
	        android:layout_alignParentRight="true"/>
    </RelativeLayout>
    
	<CheckBox
        android:id="@+id/checkBoxMessage"
        android:layout_width="20dp"
        android:layout_height="20dp"
       	android:visibility="visible"
       	android:background="@drawable/ui_warnmessage_checkbox"
       	android:button="@null"
       	android:layout_centerVertical="true"
       	android:layout_alignParentRight="true"
       	android:layout_marginRight="5dp"
        	 />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/warm_img_layout"
        android:layout_toLeftOf="@id/checkBoxMessage"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/describle_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:layout_weight="1"
                android:textColor="#27408B"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/detail_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:textColor="#27408B"
            android:textSize="12sp" />
    </LinearLayout>
    
    

</RelativeLayout>