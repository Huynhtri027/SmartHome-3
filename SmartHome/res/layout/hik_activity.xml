<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/com.gdgl.smarthome">

    <android.support.v7.widget.CardView
        android:id="@+id/toolbar_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-4.5dp"
        android:layout_marginStart="-4.5dp"
        android:layout_marginTop="-6.5dp"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp" >

        <include
            android:id="@+id/toolbar_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/toolbar_default" />
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        <Button
            android:id="@+id/btn_Capture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ui_button_selector_blue"
		    android:textColor="@color/ui_button_selector_blue_text"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="截图" />
        
        <RelativeLayout 
            android:id="@+id/lay_pic"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_above="@id/btn_Capture"
            android:layout_marginBottom="10dp"
            android:visibility="gone">
            <Button
                android:id="@+id/btn_last"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ir_dvdleft_down"/>
            <Button
                android:id="@+id/btn_next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ir_dvdright_down"/>
            <Gallery 
                android:id="@+id/gallery_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/btn_next"
                android:layout_toRightOf="@id/btn_last"
                android:spacing="2dp"/>
        </RelativeLayout>
       
        <SurfaceView
            android:id="@+id/Sur_Player"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_Capture"
            android:background="#0000ff00" /> 
            
        <RelativeLayout 
            android:id="@+id/lay_big_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/Sur_Player"
            android:layout_alignParentBottom="true"
            android:visibility="gone">
            
            <ImageView
                android:id="@+id/img_big_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            
        </RelativeLayout>
        
	</RelativeLayout>
    <!-- android:layout_marginTop="?android:attr/actionBarSize" -->

</LinearLayout>